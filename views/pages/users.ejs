<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head.ejs %>
    <title>Users | Inventory Assistant</title>
</head>

<body></body>
<main>
    <header>
        <% include ../partials/header.ejs %>
    </header>
    <h2>Users</h2>
    <div id="userRegistration">
        <div id="registrationForm"></form>
            <div>
                <label for="userName">User Name</label>
                <input type="text" name="userName" id="userName" required placeholder="Enter user name">
            </div>
            <div>
                <label for="userPassword">Password</label>
                <input type="password" name="userPassword" id="userPassword" required placeholder="Enter password">
            </div>
            <button onclick="registerUser()">Register User</button>
        </div>
    </div>
    <div id="usersContainer">
        <table>
        <tr>
            <th>User Name</th>
            <th>Options</th>
        </tr>
        <% results.forEach( r => { %>
        <tr>
            <td><%= r.user_name %></td>
            <td>Delete</td>
        </tr>
        <% }); %>
        </table>
    </div>
</main>
</body>
</html>
